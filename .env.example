# Database configuration
DATABASE_URL=postgresql://username:password@localhost:5432/rust_web_service

# JWT configuration
JWT_SECRET=your_super_secret_jwt_key_that_should_be_at_least_32_characters_long
JWT_EXPIRATION=3600

# Server configuration
SERVER_HOST=127.0.0.1
SERVER_PORT=8080

# Security configuration
BCRYPT_COST=12

# Logging configuration
LOG_LEVEL=info

# Development/Production environment
RUST_ENV=development

# Optional: Email configuration (for future email verification features)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-app-password
# FROM_EMAIL=noreply@yourapp.com

# Optional: Redis configuration (for session storage or caching)
# REDIS_URL=redis://localhost:6379

# Optional: Application-specific settings
# APP_NAME=Rust Web Service
# APP_VERSION=1.0.0
# FRONTEND_URL=http://localhost:3000
